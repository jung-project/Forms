{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/setupProxy.ts"
  ],
  "exclude": [
    "node_modules",
    "./tsconfig.paths.json"
  ]
}